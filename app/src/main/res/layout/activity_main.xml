<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/x_label"
        android:layout_width="40"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="X"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/y_label"
        android:layout_width="40"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Y"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/x_label" />

    <TextView
        android:id="@+id/z_label"
        android:layout_width="40"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Z"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/y_label" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/x_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"

        app:layout_constraintBottom_toBottomOf="@+id/x_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/x_label"
        app:layout_constraintTop_toTopOf="@+id/x_label"

        custom:progress_current="20"
        custom:progress_max="100"
        custom:progress_reached_bar_height="12dp"
        custom:progress_reached_color="#3498DB"
        custom:progress_text_color="#3498DB"
        custom:progress_text_offset="5dp"
        custom:progress_text_size="30sp"
        custom:progress_text_visibility="visible"
        custom:progress_unreached_bar_height="5dp"
        custom:progress_unreached_color="#CCCCCC" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/y_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"

        app:layout_constraintBottom_toBottomOf="@+id/y_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/y_label"
        app:layout_constraintTop_toTopOf="@+id/y_label"

        custom:progress_current="60"
        custom:progress_max="100"
        custom:progress_reached_bar_height="12dp"
        custom:progress_reached_color="#3498DB"
        custom:progress_text_color="#3498DB"
        custom:progress_text_offset="5dp"
        custom:progress_text_size="30sp"
        custom:progress_text_visibility="visible"
        custom:progress_unreached_bar_height="5dp"
        custom:progress_unreached_color="#CCCCCC" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/z_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"

        app:layout_constraintBottom_toBottomOf="@+id/z_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/z_label"
        app:layout_constraintTop_toTopOf="@+id/z_label"

        custom:progress_current="80"
        custom:progress_max="100"
        custom:progress_reached_bar_height="12dp"
        custom:progress_reached_color="#3498DB"
        custom:progress_text_color="#3498DB"
        custom:progress_text_offset="5dp"
        custom:progress_text_size="30sp"
        custom:progress_text_visibility="visible"
        custom:progress_unreached_bar_height="5dp"
        custom:progress_unreached_color="#CCCCCC" />
</android.support.constraint.ConstraintLayout>